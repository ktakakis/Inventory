@model IEnumerable<netcore.Models.Invent.ProductLine>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminlteNetcoreIndex.cshtml";
}


<table class="table table-hover table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Product.productName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Component.productName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Percentage)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.createdAt)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Product.productName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Component.productName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Percentage)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.createdAt)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ProductLineId"><i class="fa fa-pencil"></i></a> |
                <a asp-action="Details" asp-route-id="@item.ProductLineId"><i class="fa fa-list"></i></a> |
                <a asp-action="Delete" asp-route-id="@item.ProductLineId"><i class="fa fa-trash"></i></a>
            </td>
        </tr>
        }
    </tbody>
</table>
