@model netcore.Models.Invent.PurchaseOrder

@{
    ViewData["Title"] = "Διαγραφή Παραγγελίας Αγοράς(PO)";
    Layout = "~/Views/Shared/_AdminlteNetcoreDelete.cshtml";
    ViewData["EntityIcon"] = "fa fa-file-text";
    ViewData["DeleteInfo"] = "[Completed] Η Παραγγελία Αγοράς (PO) δεν μπορεί να διαγραφεί. Επαναφορά κατάστασης σε [Open] με τη διαγραφή της σχετικής παραλαβής αγοράς (παραλαβής)";
    ViewData["IsCanDeleted"] = false;
    if (Model.purchaseOrderStatus != netcore.Models.Invent.PurchaseOrderStatus.Completed)
    {
        ViewData["IsCanDeleted"] = true;
    }
}


@Html.Partial("_StatusMessage", (string)ViewBag.StatusMessage)
<div>

    <div class="row">
        <div class="col-md-12">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="purchaseOrderId" />
            <input type="hidden" asp-for="purchaseOrderNumber" />
            <input type="hidden" asp-for="purchaseOrderStatus" />
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="purchaseOrderNumber" class="control-label"></label>
                        <input disabled asp-for="purchaseOrderNumber" class="form-control" disabled />
                        <span asp-validation-for="purchaseOrderNumber" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="vendorId" class="control-label">Προμηθευτής</label>
                        <select disabled asp-for="vendorId" class="form-control select2" asp-items="ViewBag.vendorId"></select>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-4">
                    <div class="form-group">
                        <label asp-for="poDate" class="control-label"></label>
                        <div class="input-group date">
                            <div class="input-group-addon">
                                <i class="fa fa-calendar"></i>
                            </div>
                            <input disabled asp-for="poDate" value="@Model.poDate.ToString("dd/MM/yyyy")" class="form-control pull-right datepicker" type="text" />
                        </div>
                        <span asp-validation-for="poDate" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label asp-for="deliveryDate" class="control-label"></label>
                        <div class="input-group date">
                            <div class="input-group-addon">
                                <i class="fa fa-calendar"></i>
                            </div>
                            <input disabled asp-for="deliveryDate" value="@Model.deliveryDate.ToString("dd/MM/yyyy")" class="form-control pull-right datepicker" type="text" />
                        </div>
                        <span asp-validation-for="deliveryDate" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label asp-for="purchaseOrderStatus" class="control-label"></label>
                        <select disabled asp-for="purchaseOrderStatus" class="form-control select2" asp-items="Html.GetEnumSelectList<netcore.Models.Invent.PurchaseOrderStatus>()"></select>
                        <span asp-validation-for="purchaseOrderStatus" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-4">
                    <div class="form-group">
                        <label asp-for="branchId" class="control-label">Υποκατάστημα</label>
                        <select disabled asp-for="branchId" class="form-control select2" asp-items="ViewBag.branchId"></select>
                        <span asp-validation-for="branchId" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label asp-for="top" class="control-label">Τρόπος Πληρωμής</label>
                        <select disabled asp-for="top" class="form-control select2" asp-items="Html.GetEnumSelectList<netcore.Models.Invent.TOP>()"></select>
                        <span asp-validation-for="top" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label asp-for="Paid" class="control-label"></label>
                        <input disabled type="checkbox" asp-for="Paid" class="checkbox" />
                        <span asp-validation-for="Paid" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-4">
                    <div class="form-group">
                        <label asp-for="referenceNumberExternal" class="control-label"></label>
                        <input disabled asp-for="referenceNumberExternal" class="form-control" />
                        <span asp-validation-for="referenceNumberExternal" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group has-success">
                        <label asp-for="picInternal" class="control-label">Υπεύθυνος Παραλαβής</label>
                        <input disabled asp-for="picInternal" class="form-control" />
                        <span asp-validation-for="picInternal" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group has-success">
                        <label asp-for="picVendor" class="control-label">Υπεύθυνος Αποστολής</label>
                        <input disabled asp-for="picVendor" class="form-control" />
                        <span asp-validation-for="picVendor" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="description" class="control-label"></label>
                <textarea disabled asp-for="description" class="form-control" rows="3"></textarea>
                <span asp-validation-for="description" class="text-danger"></span>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group ">
                        <label asp-for="totalOrderAmount" class="control-label"></label>
                        <input disabled asp-for="totalOrderAmount" class="form-control" />
                        <span asp-validation-for="totalOrderAmount" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group ">
                        <label asp-for="totalVendorPayment" class="control-label"></label>
                        <input disabled asp-for="totalVendorPayment" class="form-control" />
                        <span asp-validation-for="totalVendorPayment" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group ">
                        <label asp-for="totalDiscountAmount" class="control-label"></label>
                        <input disabled asp-for="totalDiscountAmount" class="form-control" />
                        <span asp-validation-for="totalDiscountAmount" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group ">
                        <label asp-for="InvoiceBalance" class="control-label"></label>
                        <input disabled asp-for="InvoiceBalance" class="form-control" />
                        <span asp-validation-for="InvoiceBalance" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="form-group hidden">
                <label asp-for="totalDiscountAmount" class="control-label"></label>
                <input disabled asp-for="totalDiscountAmount" class="form-control" />
                <span asp-validation-for="totalDiscountAmount" class="text-danger"></span>
            </div>
            <div class="form-group hidden">
                <label asp-for="totalOrderAmount" class="control-label"></label>
                <input disabled asp-for="totalOrderAmount" class="form-control" />
                <span asp-validation-for="totalOrderAmount" class="text-danger"></span>
            </div>
            <div class="form-group hidden">
                <label asp-for="purchaseReceiveNumber" class="control-label"></label>
                <input disabled asp-for="purchaseReceiveNumber" class="form-control" />
                <span asp-validation-for="purchaseReceiveNumber" class="text-danger"></span>
            </div>
        </div>
    </div>

</div>
