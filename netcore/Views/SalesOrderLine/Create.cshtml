@model netcore.Models.Invent.SalesOrderLine

@{
    ViewData["Title"] = "Δημιουργία";
    Layout = "~/Views/Shared/_AdminlteNetcorePopup.cshtml";
}


<div class="row">
    <div class="col-md-12">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="SalesOrderLineId" />

        <div class="form-group hidden">
            <label asp-for="SalesOrderId" class="control-label"></label>
            <select asp-for="SalesOrderId" id="salesorderId" class="form-control select2" asp-items="ViewBag.salesOrderId"></select>
        </div>
