@model netcore.Models.Invent.Invoice
@{
    ViewData["Title"] = "Επεξεργασία";
    Layout = "~/Views/Shared/_AdminlteNetcoreEdit.cshtml";
    ViewData["EntityIcon"] = "fa fa-cart-plus";
    ViewData["EditInfo"] = " Οι Παραγγελίες Πώλησης έχουν τρεις καταστάσεις: 1. Draft (Μη επιβεβαιωμένη SO, δεν είναι έτοιμη για αποστολή), 2. Open (Επιβεβαιωμένη SO, έτοιμη για αποστολή) και 3. Completed (Κλειστό SO, έχει παραδοθεί ήδη η παραγγελία). Αλλάξτε την κατάσταση από [Draft] σε [Open] για να επιβεβαιώσετε την παραγγελία. Η κατάσταση [Completed] είναι αυτόματα ρυθμισμένη όταν το SO χρησιμοποιείται στην παραγγελία αποστολής / παράδοσης προϊόντος.";

}

@Html.Partial("_StatusMessage", (string)ViewBag.StatusMessage)
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="InvoiceId" />
            <div class="form-group">
                <label asp-for="InvoiceNumber" class="control-label"></label>
                <input asp-for="InvoiceNumber" class="form-control" />
                <span asp-validation-for="InvoiceNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="shipmentId" class="control-label"></label>
                <select asp-for="shipmentId" class="form-control" asp-items="ViewBag.shipmentId"></select>
                <span asp-validation-for="shipmentId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="InvoiceDate" class="control-label"></label>
                <input asp-for="InvoiceDate" class="form-control" />
                <span asp-validation-for="InvoiceDate" class="text-danger"></span>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
