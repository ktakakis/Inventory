                    <small class="text-yellow"><i>Property</i></small>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="size" class="control-label"></label>
                        <select disabled asp-for="size" class="form-control select2" asp-items="Html.GetEnumSelectList<netcore.Models.Invent.BusinessSize>()"></select>
                        <span asp-validation-for="size" class="text-danger"></span>
                    </div>
                </div>
            </div>
        </div>
    </div>

