@model netcore.Models.Invent.SalesOrder

@{
    ViewData["Title"] = "Δημιουργία";
    Layout = "~/Views/Shared/_AdminlteNetcoreCreate.cshtml";
    ViewData["EntityIcon"] = "fa fa-cart-plus";
    ViewData["CreateInfo"] = "Η Παραγγελία Πώλησης (SO) είναι ένα έγγραφο επιβεβαίωσης που αποστέλλεται στον πελάτη σας πριν από την παράδοση των εμπορευμάτων (αποστολή). Υπάρχουν τρεις καταστάσεις SO: 1. Draft (Ανεπιβεβαίωτη SO, δεν είναι έτοιμη για αποστολή), 2. Open (Επιβεβαιωμένη SO, έτοιμη για αποστολή) και 3. Completed (Κλειστή SO, έχουν ήδη φορτωθεί τα προϊόντα).";
}
@System.Globalization.CultureInfo.CurrentUICulture


<div class="row">
    <div class="col-md-12">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="salesOrderId" />
        <input type="hidden" asp-for="salesOrderNumber" />
        <input type="hidden" asp-for="salesOrderStatus" />
        <div class="row">
            <div class="col-md-12">
                <small class="text-yellow"><i>Περίληψη</i></small>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="salesOrderNumber" class="control-label"></label>
                    <input asp-for="salesOrderNumber" class="form-control" disabled />
                    <span asp-validation-for="salesOrderNumber" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="salesOrderStatus" class="control-label"></label>
                    <select asp-for="salesOrderStatus" class="form-control select2" asp-items="Html.GetEnumSelectList<netcore.Models.Invent.SalesOrderStatus>()" disabled></select>
                    <span asp-validation-for="salesOrderStatus" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="customerId" class="control-label">Πελάτης</label>
                    <select asp-for="customerId" id="customerList" class="form-control select2" asp-items="ViewBag.customerId"></select>
                    <span asp-validation-for="customerId" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="customerLineId" class="control-label">Διεύθυνση</label>
                    <select asp-for="customerLineId" id="customerLineList" class="form-control select2" asp-items="ViewBag.customerLineId"></select>
                    <span asp-validation-for="customerLineId" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="description" class="control-label"></label>
            <textarea asp-for="description" class="form-control" rows="3"></textarea>
            <span asp-validation-for="description" class="text-danger"></span>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="soDate" class="control-label"></label>
                    <div class="input-group date">
                        <div class="input-group-addon">
                            <i class="fa fa-calendar"></i>
                        </div>
                        <input asp-for="soDate" value="@Model.soDate.ToString("dd/MM/yyyy")" class="form-control pull-right datepicker" lang="el" type="text" />
                    </div>
                    <span asp-validation-for="soDate" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="deliveryDate" class="control-label"></label>
                    <div class="input-group date">
                        <div class="input-group-addon">
                            <i class="fa fa-calendar"></i>
                        </div>
                        <input asp-for="deliveryDate" value="@Model.deliveryDate.ToString("dd/MM/yyyy")" class="form-control pull-right datepicker" lang="el" type="text" />
                    </div>
                    <span asp-validation-for="deliveryDate" class="text-danger"></span>
                </div>
            </div>

        </div>
        <div class="row">
            <div class="col-md-12">
                <small class="text-yellow"><i>Διεύθυνση</i></small>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <small class="text-yellow"><i>Property</i></small>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="branchId" class="control-label">Υποκατάστημα</label>
                    <select asp-for="branchId" class="form-control select2" asp-items="ViewBag.branchId"></select>
                    <span asp-validation-for="branchId" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="top" class="control-label">Τρόπος Πληρωμής</label>
                    <select asp-for="top" class="form-control select2" asp-items="Html.GetEnumSelectList<netcore.Models.Invent.TOP>()"></select>
                    <span asp-validation-for="top" class="text-danger"></span>
                </div>
            </div>

        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="form-group has-success">
                    <label asp-for="EmployeeId" class="control-label">Συνεργάτης</label>
                    <select asp-for="EmployeeId" class="form-control select2" asp-items="ViewBag.employeeId"></select>
                    <span asp-validation-for="EmployeeId" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="Invoicing" class="control-label"></label>
                    <input type="checkbox" asp-for="Invoicing" class="checkbox" />
                    <span asp-validation-for="Invoicing" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="form-group hidden">
            <label asp-for="totalDiscountAmount" class="control-label"></label>
            <input asp-for="totalDiscountAmount" class="form-control" />
            <span asp-validation-for="totalDiscountAmount" class="text-danger"></span>
        </div>
        <div class="form-group hidden">
            <label asp-for="totalOrderAmount" class="control-label"></label>
            <input asp-for="totalOrderAmount" class="form-control" />
            <span asp-validation-for="totalOrderAmount" class="text-danger"></span>
        </div>
        <div class="form-group hidden">
            <label asp-for="salesShipmentNumber" class="control-label"></label>
            <input asp-for="salesShipmentNumber" class="form-control" />
            <span asp-validation-for="salesShipmentNumber" class="text-danger"></span>
        </div>


    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script type="text/javascript">
        $("#customerList").change(function () {
            var customerId = $("#customerList").val();
            var url = "/SalesOrder/GetCustomerLines";

            $.getJSON(url, { customerId: customerId }, function (data) {
                var item = "";
                $("#customerLineList").empty();
                $.each(data, function (i, customerLine) {
                    item += '<option value="' + customerLine.value + '">' + customerLine.text + '</option>'
                });
                $("#customerLineList").html(item);
            });
        });
    </script>

}
