                    <label asp-for="ProductVATAmount" class="control-label"></label>
                    <input readonly="readonly" asp-for="ProductVATAmount" id="productvatamount" class="form-control" />
                    <span asp-validation-for="ProductVATAmount" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
