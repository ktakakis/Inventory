@{
    Layout = null;
}
<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
    <h4 class="modal-title">Προσθήκη / Επεξεργασία δεδομένων</h4>
</div>
<form onsubmit="return SubmitAddEdit(this)" lang="en">
    <div class="box-body">
        @RenderBody()
    </div>

    <div class="box-footer">
        <button type="submit" class="btn btn-primary pull-right"><i class="fa fa-save"></i> Υποβολή</button>
        <button type="button" class="btn btn-default pull-left" data-dismiss="modal">Ματαίωση</button>
    </div>
</form>
@Html.Partial("_AdminlteNetcoreBasicStyles")

@RenderSection("Styles", required: false)

@Html.Partial("_AdminlteNetcoreBasicScripts")

@RenderSection("Scripts", required: false)
