@model netcore.Models.Invent.CashflowIn

@{
    ViewData["Title"] = "Επεξεργασία";
    Layout = "~/Views/Shared/_AdminlteNetcoreEdit.cshtml";
    ViewData["EntityIcon"] = "fa fa-exchange";
    ViewData["EditInfo"] = " Η Εντολή Μεταφοράς Χρημάτων έχει 3 καταστάσεις: 1. Αίτηση (Μη επιβεβαιωμένη, δεν είναι έτοιμη για μεταφορά), 2. Έγκριση (Επιβεβαιωμένη, έτοιμη για μεταφορά) και 3. Ολοκληρωμένη (Κλειστή, έχει ήδη γίνει η διαδικασία μεταφοράς).";
}

@Html.Partial("_StatusMessage", (string)ViewBag.StatusMessage)
<div class="row">
    <div class="col-md-12">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="CashflowInId" />
        <div class="row">
            <div class="col-md-4">
                <div class="form-group">
                    <label asp-for="CashflowInNumber" class="control-label"></label>
                    <input asp-for="CashflowInNumber" class="form-control" disabled />
                    <span asp-validation-for="CashflowInNumber" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    <label asp-for="CashflowInDate" class="control-label"></label>
                    <div class="input-group date">
                        <div class="input-group-addon">
                            <i class="fa fa-calendar"></i>
                        </div>
                        <input asp-for="CashflowInDate" value="@Model.CashflowInDate.ToString("dd/MM/yyyy")" class="form-control pull-right datepicker" type="text" />
                    </div>
                    <span asp-validation-for="CashflowInDate" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    <label asp-for="MoneyTransferOrderId" class="control-label">Παραγγελία μεταφοράς #</label>
                    <select asp-for="MoneyTransferOrderId" class="form-control select2" asp-items="ViewBag.moneyTransferOrderId"></select>
                </div>
            </div>
        </div>
        <div class="form-group has-success">
            <label asp-for="Description" class="control-label"></label>
            <textarea asp-for="Description" class="form-control"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="row hidden">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="CashRepositoryIdFrom" class="control-label"></label>
                    <select asp-for="CashRepositoryIdFrom" class="form-control select2" asp-items="ViewBag.cashRepositoryIdFrom"></select>
                    <span asp-validation-for="CashRepositoryIdFrom" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="CashRepositoryIdTo" class="control-label"></label>
                    <select asp-for="CashRepositoryIdTo" class="form-control select2" asp-items="ViewBag.cashRepositoryIdTo"></select>
                    <span asp-validation-for="CashRepositoryIdTo" class="text-danger"></span>
                </div>
            </div>
        </div>

    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
