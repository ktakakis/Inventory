@model netcore.Models.Invent.Vendor
@inject netcore.Data.ApplicationDbContext _context;

@{
    ViewData["Title"] = "Διαγραφή";
    Layout = "~/Views/Shared/_AdminlteNetcoreDelete.cshtml";
    ViewData["EntityIcon"] = "fa fa-industry";
    ViewData["DeleteInfo"] = "Ο προμηθευτής που έχει ήδη συναλλαγές (PO) δεν μπορεί να διαγραφεί.";
    netcore.Models.Invent.PurchaseOrder purchaseOrder = _context.PurchaseOrder.Where(x => x.vendorId.Equals(Model.vendorId)).FirstOrDefault();
    ViewData["IsCanDeleted"] = false;
    if (purchaseOrder == null)
    {
        ViewData["IsCanDeleted"] = true;
    }
}


@Html.Partial("_StatusMessage", (string)ViewBag.StatusMessage)
<div>

    <div class="row">
        <div class="col-md-12">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="vendorId" />
