@model netcore.Models.Invent.SalesOrder

@{
    Layout = "_AdminlteNetcore";
}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <div class="pad margin no-print">
        <div class="callout callout-info" style="margin-bottom: 0!important;">
            <h4><i class="fa fa-info"></i> Σημείωση:</h4>
            Αυτή η σελίδα έχει βελτιωθεί για εκτύπωση. Κάντε κλικ στο κουμπί εκτύπωσης στο κάτω μέρος για εκτύπωση.
        </div>
    </div>
    <!-- Main content -->
    <section class="invoice">
        <!-- title row -->
        <div class="row">
            <table style="width:100%">
                <tr>
                    <td>
                        <div class="col-sm-4">
                            <img src="~/images/LOGO.png" alt="" title="" />
                        </div>
                    </td>
                    <td>
                        <div class="col-sm-8">
                            <h4>@Model.branch.branchName</h4>
                            <h5>@Model.branch.street1</h5>
                            <h5>@Model.branch.city</h5>
                        </div>
                    </td>
                </tr>
            </table>
            <!-- /.col -->
        </div>
        <br> 
        <div class="row">
            <table class="table table-responsive">
                <thead style="background-color:lavender">
                    <tr>
                        <th>Είδος Παραστατικού</th>
                        <th>Αριθμός</th>
                        <th>Συνεργάτης</th>
                        <th>Ημερομηνία</th>
                        <th>Ώρα</th>
                    </tr>
                </thead>
                <tbody style="border-bottom:groove;">
                    <tr>
                        <td><strong>Παραγγελία Πώλησης Προϊόντων</strong></td>
                        <td>@Model.salesOrderNumber</td>
                        <td>@Model.picInternal</td>
                        <td>@Model.deliveryDate.ToString("dd-MMM-yyyy")</td>
                        <td>@Model.deliveryDate.ToString("hh:mm") </td>
                    </tr>

                </tbody>
            </table>
        </div>

        <!-- info row -->
        <div class="row invoice-info">
            <div class="col-sm-4 invoice-col">
                Πελάτης / Παράδοση
                <address>
                    <strong>@Model.customer.customerName</strong><br>
                    @Model.customerLine.street1<br>
                    @Model.customerLine.city<br>
                    @Model.customerLine.country<br>
                    Υπεύθυνος: @Model.picCustomer
                </address>
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
        <!-- Table row -->
        <div class="row" style="border-bottom:groove;border-top:groove;">
            <div class="col-xs-12 table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Ποσ</th>
                            <th>Προϊόν</th>
                            <th>Τιμή</th>
                            <th>Αξία Π.Ε.</th>
                            <th>% Έκπτωση</th>
                            <th>Έκπτωση</th>
                            <th>Ειδικός Φόρος</th>
                            <th>% Φ.Π.Α.</th>
                            <th>Φ.Π.Α.</th>
                            <th>Σύνολο</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.salesOrderLine)
                        {
                        <tr>
                            <td>@item.Qty</td>
                            <td>@item.Product.productCode</td>
                            <td>@item.Price.ToString()</td>
                            <td>@item.TotalBeforeDiscount.ToString()</td>
                            <td>@(item.Discount*100)%</td>
                            <td>@item.DiscountAmount</td>
                            <td>@item.TotalSpecialTaxAmount</td>
                            <td>@(item.Product.ProductVAT*100)%</td>
                            <td>@item.ProductVATAmount</td>
                            <td>@item.TotalAmount</td>
                        </tr>
                        }

                    </tbody>
                </table>
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
        <div class="row">
            <!-- accepted payments column -->
            <div class="col-xs-6">
                <p class="lead">Περιγραφή:</p>
                <p class="text-muted well well-sm no-shadow" style="margin-top: 10px;">
                    @Model.description
                </p>
            </div>
            <!-- /.col -->
            <div class="col-xs-6">
                <p class="lead">Ανάλυση ποσού</p>
                <div class="table-responsive">
                    <table class="table">
                        <tr>
                            <th style="width:50%">Σύνολο:</th>
                            <td>@Model.totalOrderAmount.ToString() €</td>
                        </tr>
                        <tr>
                            <th>Έκπτωση</th>
                            <td>@Model.totalDiscountAmount.ToString() €</td>
                        </tr>
                        <tr>
                            <th>Πληρωτέο:</th>
                            <td>@((Model.totalOrderAmount - Model.totalDiscountAmount).ToString()) €</td>
                        </tr>
                    </table>
                </div>
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
        <!-- this row will not appear when printing -->
        <div class="row no-print">
            <div class="col-xs-12">

                <a href="@Url.Action("PrintSalesOrder", new { id = Model.salesOrderId })" target="_blank" class="btn btn-primary"><i class="fa fa-print"></i> Εκτύπωση</a>

            </div>
        </div>
    </section>
    <!-- /.content -->
    <div class="clearfix"></div>
</div>
<!-- /.content-wrapper -->
