@model netcore.Models.Invent.Shipment

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Εκτυπώστε την παραγγελία παράδοσης</title>
</head>
<body onload="window.print();">
    <div class="wrapper">
        <!-- Main content -->
        <section class="invoice">
            <!-- title row -->
            <div class="row">
                <div class="col-xs-12">
                    <h2 class="page-header">
                        <i class="fa fa-globe"></i> Αποστολή / Παράδοση Παραγγελία
                        <small class="pull-right">@Model.shipmentNumber</small>
                    </h2>
                </div>
                <!-- /.col -->
            </div>
            <!-- info row -->
            <div class="row invoice-info">
                <div class="col-sm-4 invoice-col">
                    From
                    <address>
                        <strong>@Model.salesOrder.branch.branchName</strong><br>
                        @Model.salesOrder.branch.street1<br>
                        @Model.salesOrder.branch.city<br>
                        @Model.Employee.DisplayName
                    </address>
                </div>
                <!-- /.col -->
                <div class="col-sm-4 invoice-col">
                    Για Πελάτη / Διεύθυνση Παράδοσης
                    <address>
                        <strong>@Model.customer.customerName</strong><br>
                        @Model.customer.CustomerLine.FirstOrDefault().street1<br>
                        @Model.customer.CustomerLine.FirstOrDefault().city<br>
                        @Model.customer.CustomerLine.FirstOrDefault().country<br>
                    </address>
                </div>
                <!-- /.col -->
                <div class="col-sm-4 invoice-col">
                    <b>Αριθμός Παραγγελίας</b> @Model.salesOrder.salesOrderNumber<br>
                    <b>Ημερομηνία Παραγγελίας:</b> @Model.salesOrder.soDate.ToString("dd-MMM-yyyy")<br>
                </div>
                <!-- /.col -->
            </div>
            <!-- /.row -->
            <!-- Table row -->
            <div class="row">
                <div class="col-xs-12 table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Ποσ</th>
                                <th>Προϊόν</th>
                                <th>Περιγραφή</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.shipmentLine)
                            {
                                <tr>
                                    <td>@item.qty</td>
                                    <td>@item.product.productCode</td>
                                    <td>@item.product.description</td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
                <!-- /.col -->
            </div>
            <!-- /.row -->
            <div class="row">
                <!-- accepted payments column -->
                <div class="col-xs-6">
                    <p class="lead">Περιγραφές:</p>
                    <p class="text-muted well well-sm no-shadow" style="margin-top: 10px;">
                        @Model.salesOrder.description
                    </p>
                </div>
                <!-- /.col -->
                <div class="col-xs-6">
                  
                </div>
                <!-- /.col -->
            </div>
            <!-- /.row -->
        </section>
        <!-- /.content -->
    </div>
    <!-- ./wrapper -->
    @Html.Partial("_AdminlteNetcoreBasicStyles")
    @Html.Partial("_AdminlteNetcoreBasicScripts")
</body>
</html>
