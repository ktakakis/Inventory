@model netcore.Models.Invent.SalesOrder
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Εκτύπωση παραγγελίας πωλήσεων</title>
</head>
<body onload="window.print();">
    <div class="wrapper">
        <!-- Main content -->
        <section class="invoice">
            <!-- title row -->
            <div class="row">
                <div class="col-sm-4">
                    <img src="~/images/LOGO.png" alt="" title="" />
                </div>
                <div class="col-sm-4 invoice-col pull-right-container">
                    <h4>@Model.branch.branchName</h4>
                    <h5>@Model.branch.street1</h5>
                    <h5>@Model.branch.city</h5>
                </div>
                <div class="col-sm-4 invoice-col">
                    <h3>
                    </h3>
                </div>
                <!-- /.col -->
            </div>
            <br>
            <div class="row">
                <table class="table table-responsive">
                    <thead style="background-color:lavender">
                        <tr>
                            <th>Είδος Παραστατικού</th>
                            <th>Αριθμός</th>
                            <th>Συνεργάτης</th>
                            <th>Ημερομηνία</th>
                            <th>Ώρα</th>
                        </tr>
                    </thead>
                    <tbody style="border-bottom:groove;">
                        <tr>
                            <td><strong>Παραγγελία Πώλησης Προϊόντων</strong></td>
                            <td>@Model.salesOrderNumber</td>
                            <td>@Model.picInternal</td>
                            <td>@Model.soDate.ToString("dd-MMM-yyyy")</td>
                            <td>@Model.soDate.ToString("hh:mm") </td>
                        </tr>

                    </tbody>
                </table>
            </div>
            <!-- info row -->
            <div class="row invoice-info">
                <div class="col-sm-4 invoice-col">
                    Πελάτης / Παράδοση
                    <address>
                        <strong>@Model.customer.customerName</strong><br>
                        @Model.customerLine.street1<br>
                        @Model.customerLine.city<br>
                        @Model.customerLine.country<br>
                        Υπεύθυνος: @Model.picCustomer
                    </address>
                </div>
                <!-- /.col -->
                <div class="col-sm-4 invoice-col">
                    <b>Αρ. Παραγγελίας:</b> @Model.salesOrderNumber<br>
                    <b>Ημ. Παραγγελίας:</b> @Model.soDate.ToString("dd-MMM-yyyy")<br>
                    <b>Ημ. Παράδοσης:</b> @Model.deliveryDate.ToString("dd-MMM-yyyy")<br>

                </div>
                <!-- /.col -->
            </div>
            <!-- /.row -->
            <!-- Table row -->
            <div class="row">
                <div class="col-xs-12 table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Ποσ</th>
                                <th>Προϊόν</th>
                                <th>Τιμή</th>
                                <th>Αξία Π.Ε.</th>
                                <th>% Έκπτωση</th>
                                <th>Έκπτωση</th>
                                <th>Ειδικός Φόρος</th>
                                <th>% Φ.Π.Α.</th>
                                <th>Ποσό Φ.Π.Α.</th>
                                <th>Σύνολο</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.salesOrderLine)
                            {
                            <tr>
                                <td>@item.Qty</td>
                                <td>@item.Product.productCode</td>
                                <td>@item.Price.ToString()</td>
                                <td>@item.TotalBeforeDiscount.ToString()</td>
                                <td>@(item.Discount * 100)%</td>
                                <td>@item.DiscountAmount€</td>
                                <td>@item.TotalSpecialTaxAmount</td>
                                <td>@(item.Product.ProductVAT * 100)%</td>
                                <td>@item.ProductVATAmount</td>
                                <td>@item.TotalAmount</td>
                            </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <!-- /.col -->
            </div>
            <!-- /.row -->
            <div class="row">
                <!-- accepted payments column -->
                <div class="col-xs-6">
                    <p class="lead">Περιγραφές:</p>
                    <p class="text-muted well well-sm no-shadow" style="margin-top: 10px;">
                        @Model.description
                    </p>
                </div>
                <!-- /.col -->
                <div class="col-xs-6">
                    <p class="lead">Λεπτομέρειες ποσού</p>
                    <div class="table-responsive">
                        <table class="table">
                            <tr>
                                <th style="width:50%">Σύνολο:</th>
                                <td>@Model.totalOrderAmount.ToString() €</td>
                            </tr>
                            <tr>
                                <th>Έκπτωση</th>
                                <td>@Model.totalDiscountAmount.ToString() €</td>
                            </tr>
                            <tr>
                                <th>Πληρωτέο:</th>
                                <td>@((Model.totalOrderAmount - Model.totalDiscountAmount).ToString()) €</td>
                            </tr>
                        </table>
                    </div>
                </div>
                <!-- /.col -->
            </div>
            <!-- /.row -->
        </section>
        <!-- /.content -->
    </div>
    <!-- ./wrapper -->
    @Html.Partial("_AdminlteNetcoreBasicStyles")
    @Html.Partial("_AdminlteNetcoreBasicScripts")
</body>
</html>
