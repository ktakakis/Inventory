                <div class="col-md-12">
                    <small class="text-yellow"><i>Περίληψη</i></small>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group has-success">
                        <label asp-for="vendorName" class="control-label"></label>
                        <input disabled asp-for="vendorName" class="form-control" />
                        <span asp-validation-for="vendorName" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="description" class="control-label"></label>
                        <input disabled asp-for="description" class="form-control" />
                        <span asp-validation-for="description" class="text-danger"></span>
                    </div>
                </div>

            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group has-success">
                        <label asp-for="TaxNumber" class="control-label"></label>
                        <input asp-for="TaxNumber" class="form-control" />
                        <span asp-validation-for="TaxNumber" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="TaxOffice" class="control-label"></label>
                        <input asp-for="TaxOffice" class="form-control" />
