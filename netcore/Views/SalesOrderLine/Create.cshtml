        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="Price" class="control-label"></label>
                    <input asp-for="Price" readonly="readonly" id="price" class="form-control" lang="el" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group ">
                    <label asp-for="TotalAmount" class="control-label"></label>
                    <input readonly="readonly" asp-for="TotalAmount" id="totalamount" class="form-control" />
                    <span asp-validation-for="TotalAmount" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="IsGift" class="control-label"></label>
                    <input type="number" asp-for="IsGift" id="isgift" class="number" min="0" max="1"/>
                    <span asp-validation-for="IsGift" class="text-danger"></span>
                </div>
            </div>
        </div>
    </div>
</div>

