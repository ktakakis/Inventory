@model netcore.Models.Invent.SalesOrder

@{
    Layout = "_AdminlteNetcore";
}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Παραγγελία Πώλησης
            <small>@Model.salesOrderNumber</small>
        </h1>

    </section>
    <div class="pad margin no-print">
        <div class="callout callout-info" style="margin-bottom: 0!important;">
            <h4><i class="fa fa-info"></i> Σημείωση:</h4>
            Αυτή η σελίδα έχει βελτιωθεί για εκτύπωση. Κάντε κλικ στο κουμπί εκτύπωσης στο κάτω μέρος για εκτύπωση.
        </div>
    </div>
    <!-- Main content -->
    <section class="invoice">
        <!-- title row -->
        <div class="row">
            <div class="col-xs-12">
                <h2 class="page-header">
                    <i class="fa fa-globe"></i> Παραγγελία Πώλησης:
                    <small class="pull-right">Ημερομηνία: @Model.soDate.ToString("dd-MMM-yyyy")</small>
                </h2>
            </div>
            <!-- /.col -->
        </div>
        <!-- info row -->
        <div class="row invoice-info">
            <div class="col-sm-4 invoice-col">
                Πελάτης / Παράδοση
                <address>
                    <strong>@Model.customer.customerName</strong><br>
                    @Model.customerLine.street1<br>
                    @Model.customerLine.city<br>
                    @Model.customerLine.country<br>
                    Υπεύθυνος: @Model.picCustomer
                </address>
            </div>
            <!-- /.col -->
            <div class="col-sm-4 invoice-col">
                Από
                <address>
                    <strong>@Model.branch.branchName</strong><br>
                    @Model.branch.street1<br>
                    @Model.branch.street2<br>
                    @Model.branch.city<br>
                    Συνεργάτης: @Model.picInternal
                </address>
            </div>
            <!-- /.col -->
            <div class="col-sm-4 invoice-col">
                <b>Αρ. Παραγγελίας:</b> @Model.salesOrderNumber<br>
                <b>Ημ. Παραγγελίας:</b> @Model.soDate.ToString("dd-MMM-yyyy")<br>
                <b>Ημ. Παράδοσης:</b> @Model.deliveryDate.ToString("dd-MMM-yyyy")<br>

            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
        <!-- Table row -->
        <div class="row">
            <div class="col-xs-12 table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Ποσ</th>
                            <th>Προϊόν</th>
                            <th>Τιμή</th>
                            <th>Περιγραφή</th>
                            <th>Υποσύνολο</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.salesOrderLine)
                        {
                            <tr>
                                <td>@item.Qty</td>
                                <td>@item.Product.productCode</td>
                                <td>@item.Price.ToString()</td>
                                <td>@item.Product.productName</td>
                                <td>@item.TotalAmount €</td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
        <div class="row">
            <!-- accepted payments column -->
            <div class="col-xs-6">
                <p class="lead">Περιγραφή:</p>
                <p class="text-muted well well-sm no-shadow" style="margin-top: 10px;">
                    @Model.description
                </p>
            </div>
            <!-- /.col -->
            <div class="col-xs-6">
                <p class="lead">Ανάλυση ποσού</p>
                <div class="table-responsive">
                    <table class="table">
                        <tr>
                            <th style="width:50%">Υποσύνολο:</th>
                            <td>@Model.totalOrderAmount.ToString() €</td>
                        </tr>
                        <tr>
                            <th>Έκπτωση</th>
                            <td>@Model.totalDiscountAmount.ToString() €</td>
                        </tr>
                        <tr>
                            <th>Σύνολο:</th>
                            <td>@((Model.totalOrderAmount - Model.totalDiscountAmount).ToString()) €</td>
                        </tr>
                    </table>
                </div>
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
        <!-- this row will not appear when printing -->
        <div class="row no-print">
            <div class="col-xs-12">

                <a href="@Url.Action("PrintSalesOrder", new { id = Model.salesOrderId })" target="_blank" class="btn btn-primary"><i class="fa fa-print"></i> Εκτύπωση</a>

            </div>
        </div>
    </section>
    <!-- /.content -->
    <div class="clearfix"></div>
</div>
<!-- /.content-wrapper -->
