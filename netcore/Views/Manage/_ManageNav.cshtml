@using netcore.Views.Manage
@inject SignInManager<ApplicationUser> SignInManager
@{
    var hasExternalLogins = (await SignInManager.GetExternalAuthenticationSchemesAsync()).Any();
}

<ul class="nav nav-pills nav-stacked">
    <li class="@ManageNavPages.IndexNavClass(ViewContext)"><a asp-action="Index">Προφίλ</a></li>
    <li class="@ManageNavPages.ChangePasswordNavClass(ViewContext)"><a asp-action="ChangePassword">Kωδικός πρόσβασης</a></li>
    @if (hasExternalLogins)
    {
        <li class="@ManageNavPages.ExternalLoginsNavClass(ViewContext)"><a asp-action="ExternalLogins">Εξωτερικές συνδέσεις</a></li>
    }
    <li class="@ManageNavPages.TwoFactorAuthenticationNavClass(ViewContext)"><a asp-action="TwoFactorAuthentication">Έλεγχος ταυτότητας δύο παραγόντων</a></li>
    <li class="@ManageNavPages.ChangeProfilePictureNavClass(ViewContext)"><a asp-action="ChangeProfilePicture">Αλλαγή εικόνας προφίλ</a></li>
</ul>

