@model netcore.Models.Invent.CashflowIn

@{
    ViewData["Title"] = "Δημιουργία";
    Layout = "~/Views/Shared/_AdminlteNetcoreCreate.cshtml";
    ViewData["EntityIcon"] = "fa fa-exchange";
    ViewData["CreateInfo"] = "Η εντολή μεταφοράς χρημάτων (ΕΜΧ), είναι μια διαδικασία κατα την οποία μπορούμε να μεταφέρουμε χρήματα από το ένα ταμείο σε κάποιο άλλο ταμείο. Δεν μπορούμε να μεταφέρουμε χρήματα απο ένα ταμείο στο ίδιο ταμείο";
}

@Html.Partial("_StatusMessage", (string)ViewBag.StatusMessage)
<div class="row">
    <div class="col-md-4">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="MoneyTransferOrderId" class="control-label"></label>
            <select asp-for="MoneyTransferOrderId" class="form-control" asp-items="ViewBag.MoneyTransferOrderId"></select>
        </div>
        <div class="form-group">
            <label asp-for="CashflowInNumber" class="control-label"></label>
            <input asp-for="CashflowInNumber" class="form-control" />
            <span asp-validation-for="CashflowInNumber" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="CashflowInDate" class="control-label"></label>
            <input asp-for="CashflowInDate" class="form-control" />
            <span asp-validation-for="CashflowInDate" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Description" class="control-label"></label>
            <input asp-for="Description" class="form-control" />
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="CashRepositoryIdFrom" class="control-label"></label>
            <input asp-for="CashRepositoryIdFrom" class="form-control" />
            <span asp-validation-for="CashRepositoryIdFrom" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="CashRepositoryIdTo" class="control-label"></label>
            <input asp-for="CashRepositoryIdTo" class="form-control" />
            <span asp-validation-for="CashRepositoryIdTo" class="text-danger"></span>
        </div>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
